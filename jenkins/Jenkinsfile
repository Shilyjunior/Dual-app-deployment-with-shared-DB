pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                echo "🚀 Starting pipeline test"
                checkout scm
                sh '''
                    echo "✅ Basic pipeline working!"
                    echo "Current directory: $(pwd)"
                    echo "Files:"
                    ls -la
                '''
            }
        }
    }
    post {
        always {
            echo "🏁 Test completed"
        }
    }
}